<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.d1scw0rld.wordmatex"
          android:versionCode="20090508"
          android:versionName="1.2">

    <uses-sdk android:minSdkVersion="2"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- <activity -->
        <!-- android:name=".WordMate" -->
        <!-- android:label="@string/app_name"> -->
        <!-- <intent-filter> -->
        <!-- <action android:name="android.intent.action.MAIN"/> -->


        <!-- <category android:name="android.intent.category.LAUNCHER"/> -->
        <!-- </intent-filter> -->
        <!-- </activity> -->
        <activity
            android:name=".WordMateX"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/settings"/>
        <activity
            android:name=".Downloader"
            android:label="@string/downloader"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        <activity
            android:name=".DownloadViewer"
            android:label="@string/downloader"
            android:theme="@android:style/Theme.NoTitleBar"/>

        <activity
            android:name=".DownloadViewerNew"
            android:theme="@style/Theme.AppCompat.Dialog.Alert"
            />

        <service android:name=".DownloadService"/>

        <service android:name=".DownloadServiceNew"
                 android:theme="@style/AppTheme"/>

        <activity android:name=".DownloaderNew"
                  android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>